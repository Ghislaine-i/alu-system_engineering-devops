#!/usr/bin/env bash
# Configures a brand new Ubuntu machine with Nginx and a 301 redirect

# Update package list and install Nginx
apt-get update
apt-get install -y nginx

# Create a simple index page
echo "Hello World!" > /var/www/html/index.html

# Configure Nginx to redirect /redirect_me to YouTube with 301
# Add the redirect location block after the server_name directive
sed -i '/server_name _;/a \\n\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}' /etc/nginx/sites-available/default

# Restart Nginx to apply changes
service nginx restart
