#!/usr/bin/env bash
# Script that configures Nginx to redirect /redirect_me to another page (301)

# Exit immediately if a command fails
set -e

# Install nginx if not already installed
sudo apt-get update -y
sudo apt-get install -y nginx

# Add redirection configuration using sed
sudo sed -i '/server_name _;/a \
    location /redirect_me {\n        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n    }\n' /etc/nginx/sites-available/default

# Restart nginx to apply changes
sudo systemctl restart nginx
