#!/usr/bin/env bash
# Configures a brand new Ubuntu machine with Nginx and a custom 404 page

# Update package list and install Nginx
apt-get update
apt-get install -y nginx

# Create a simple index page
echo "Hello World!" > /var/www/html/index.html

# Create custom 404 page
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Configure Nginx to use custom 404 page
# Add error_page directive after the server_name directive
sed -i '/server_name _;/a \\n\terror_page 404 /404.html;\n\tlocation = /404.html {\n\t\troot /var/www/html;\n\t\tinternal;\n\t}' /etc/nginx/sites-available/default

# Restart Nginx to apply changes
service nginx restart
