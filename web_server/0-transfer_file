heck if exactly 4 parameters are provided
if [ $# -ne 4 ]; then
    echo "Usage: 0-transfer_file PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
    exit 1
fi

# Assign parameters to variables
PATH_TO_FILE="$1"
IP="$2"
USERNAME="$3"
PATH_TO_SSH_KEY="$4"

# Check if the file exists
if [ ! -f "$PATH_TO_FILE" ]; then
    echo "Error: File '$PATH_TO_FILE' does not exist."
    exit 1
fi

# Check if the SSH key file exists
if [ ! -f "$PATH_TO_SSH_KEY" ]; then
    echo "Error: SSH key file '$PATH_TO_SSH_KEY' does not exist."
    exit 1
fi

# Transfer the file using scp with strict host key checking disabled
scp -o StrictHostKeyChecking=no -i "$PATH_TO_SSH_KEY" "$PATH_TO_FILE" "$USERNAME@$IP:~/"
